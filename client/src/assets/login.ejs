<style>
    * {
        box-sizing: border-box;
    }
    input {
        font-size: 16px;
        padding: 5px 8px;
        border: 1px solid rgba(147, 128, 108, .25);
        border-radius: 2px;
        color: #565656;
    }
    input:focus {
        outline-color: rgba(50, 50, 200, .5);
    }
    input[type="checkbox"] {
        width: 1.3em;
        height: 1.3em;
        margin: 0;
    }
    button {
        border: 1px solid rgba(147, 128, 108, .25);
        background-color: #eeeeee;
        padding: 5px 10px;
        font-size: 20px;
        cursor: pointer;
    }
    button:active, button:focus {
        outline-color: rgba(50, 50, 200, .5);
    }
    button:hover {
        background-color: #dddddd;
    }
    .login-form {
        width: 500px;
        padding: 20px 50px;
        margin: 100px auto;
        border: 1px solid #808080;
        color: #404040;
    }
    .login-form .row {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 10px 0;
    }
    .login-form .row.action {
        margin-top: 30px;
    }
    .login-form .row label {
        flex: 1;
        text-align: right;
        padding-right: 20px;
    }
    .login-form .row .input-wrp {
        flex: 2;
    }
    .login-form .row .input-wrp input[type="text"],
    .login-form .row .input-wrp input[type="password"] {
        width: 100%;
    }
    .flashes.error {
        background-color: #ffcfcf;
        padding: 5px;
        text-align: center;
        border: 1px solid #ff7b7b;
    }
</style>
<form action="/login" method="post" class="login-form">
    <% if (flashMessages && flashMessages.error) { -%>
        <div class="flashes error">
            <%= flashMessages.error %>
        </div>
    <% } -%>
    <div class="row">
        <label>Email</label>
        <div class="input-wrp">
            <input type="text" name="email">
        </div>
    </div>
    <div class="row">
        <label>Password</label>
        <div class="input-wrp">
            <input type="password" name="password">
        </div>
    </div>
    <div class="row">
        <label>Remember Me</label>
        <div class="input-wrp">
            <input type="checkbox" name="remember" value="yes">
        </div>
    </div>
    <div class="row action">
        <button type="submit" class="btn btn-warning btn-lg">Login</button>
    </div>
</form>
